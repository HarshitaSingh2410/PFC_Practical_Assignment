#include <stdio.h>
int main() {
    int i, j;
    int rows = 7;    
    int cols = 13;      
    for (i = 0; i < rows; i++) {      
        for (j = 0; j < cols; j++) {    
            if (j == i || j == cols - 1 - i) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}
/*OUTPUT
*           *
 *         *
  *       *
   *     *
    *   *
     * *
      *   */
