#include <stdio.h>
int main() {
    int i, j;
    int rows = 7, cols = 7;
    for (i = 0; i < rows; i++) {    
        for (j = 0; j < cols; j++) {      
            if ((i == 0 && j > 0 && j < cols-1) ||     
                (i == rows-2 && j > 0 && j < cols-1) || 
                (j == 0 && i > 0 && i < rows-2) ||        
                (j == cols-1 && i > 0 && i < rows-3) ||    
                (i == j && i >= rows/2))                    
            {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}
/*OUTPUT
 ***** 
*     *
*     *
*  *  *
*   *
 *****
      *   */
